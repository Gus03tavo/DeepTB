<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/Backgroud_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Menú hamburguesa -->
    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/menu_48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detección de Tuberculosis"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/menu_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Vista previa de la imagen -->
    <ImageView
        android:id="@+id/imagenCargar"
        android:layout_width="270dp"
        android:layout_height="202.5dp"
        android:background="#D3D3D3"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón de eliminar imagen (inicialmente oculto) -->

    <!-- Botón de cargar imagen -->
    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="284dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/eliminar_32"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imagenCargar"
        app:layout_constraintTop_toTopOf="@id/imagenCargar"
        />

    <Button
        android:id="@+id/BtnCargarImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar Imagen"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="#E63946"
        android:drawableRight="@drawable/file_upload_32"
        app:layout_constraintTop_toBottomOf="@id/imagenCargar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Resultados -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/resultsTitle"
        app:layout_constraintTop_toBottomOf="@+id/BtnCargarImagen"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/resultsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:text="Resultados"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto que mostrará el resultado de la predicción -->
    <TextView
        android:id="@+id/predictionResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/resultsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>